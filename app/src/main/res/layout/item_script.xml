<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/scriptLayout"
        style="@style/Clickable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/script_horizontal_padding"
        android:paddingStart="@dimen/script_view_horizontal_margin"
        android:paddingBottom="@dimen/script_horizontal_padding">

        <TextView
            android:id="@+id/scriptName"
            style="@style/Text.Bold"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/script_view_horizontal_margin"
            android:layout_marginTop="@dimen/script_view_vertical_margin"
            android:layout_marginEnd="@dimen/script_view_vertical_margin"
            android:layout_marginBottom="@dimen/script_view_vertical_margin"
            android:layout_weight="1"
            tools:text="Script Name" />

        <ImageView
            android:id="@+id/removeScript"
            style="@style/Button.Icon"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/script_view_vertical_margin"
            android:layout_marginEnd="@dimen/script_view_vertical_margin"
            android:layout_marginBottom="@dimen/script_view_vertical_margin"
            android:src="@drawable/ic_close" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>