<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/tileCardView"
        android:id="@+id/rootCardView"
        tools:layout_width="180dp"
>
    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/groupLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="@drawable/custom_ripple"
            android:focusable="true"
    >
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
            >
                <View
                        android:id="@+id/turnOnLightButton"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:foreground="@drawable/light_button_pressed"
                        android:layout_height="46dp"
                        android:layout_width="46dp"
                />
                <View
                        android:id="@+id/turnOffLightButton"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:foreground="@drawable/light_button_normal"
                        android:layout_height="46dp"
                        android:layout_width="46dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
            >
                <TextView
                        android:id="@+id/headerTextView"
                        tools:text="Коридор"
                        android:textAlignment="center"
                        style="@style/primaryText"
                        android:layout_gravity="start"
                />
                <TextView
                        style="@style/secondaryText"
                        android:id="@+id/secondaryTextView"
                        android:layout_marginTop="2dp"
                        tools:text="Коридор и Прихожая"
                        android:lines="2"
                        android:ellipsize="end"
                    android:layout_gravity="start" />
            </LinearLayout>
        </LinearLayout>
</com.google.android.material.card.MaterialCardView>