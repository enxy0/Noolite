<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccentWhite</item>
        <item name="colorIcon">@color/colorIconWhite</item>
        <item name="colorIconButton">@color/colorButtonIconWhite</item>
        <item name="colorPressedMainButton">@color/colorPressedMainButton</item>
        <item name="colorInactiveMainButton">@color/colorInactiveMainButtonWhite</item>
        <item name="colorToolbarText">@android:color/black</item>
        <item name="android:navigationBarColor">@color/colorBackgroundWhite</item>
        <item name="colorInputLayoutBackground">@color/colorInputLayoutWhite</item>
        <item name="colorToolbar">@color/colorBackgroundWhite</item>
        <item name="android:statusBarColor">@color/colorBackgroundWhite</item>
        <item name="colorDivider">@color/colorDividerWhite</item>
        <item name="colorControlHighlight">@color/colorRippleWhite</item>
        <item name="colorRipple">@color/colorRippleWhite</item>
        <item name="colorCard">@color/colorCardWhite</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryWhite</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryWhite</item>
        <item name="android:windowBackground">@color/colorBackgroundWhite</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Dark.Green" parent="AppTheme">
        <item name="colorControlHighlight">@color/colorRippleDark</item>
        <item name="colorRipple">@color/colorRippleDark</item>
        <item name="colorIcon">@color/colorIconDark</item>
        <item name="colorIconButton">@color/colorButtonIconDark</item>
        <item name="colorPressedMainButton">@color/colorPressedMainButton</item>
        <item name="colorInactiveMainButton">@color/colorInactiveMainButtonDark</item>
        <item name="android:statusBarColor">@color/colorBackgroundDark</item>
        <item name="colorToolbar">@color/colorBackgroundDark</item>
        <item name="colorDivider">@color/colorDividerDark</item>
        <item name="colorInputLayoutBackground">@color/colorInputLayoutDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorToolbarText">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:navigationBarColor">@color/colorBackgroundDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="colorCard">@color/colorCardDark</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.Black.Amber" parent="AppTheme">
        <item name="colorControlHighlight">@color/colorRippleDark</item>
        <item name="colorRipple">@color/colorRippleDark</item>
        <item name="colorIcon">@color/colorIconBlack</item>
        <item name="colorIconButton">@color/colorButtonIconBlack</item>
        <item name="colorPressedMainButton">@color/colorPressedMainButton</item>
        <item name="colorInactiveMainButton">@color/colorInactiveMainButtonBlack</item>
        <item name="android:statusBarColor">@color/colorBackgroundBlack</item>
        <item name="colorToolbar">@color/colorBackgroundBlack</item>
        <item name="colorDivider">@color/colorDividerBlack</item>
        <item name="colorInputLayoutBackground">@color/colorInputLayoutBlack</item>
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorToolbarText">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:navigationBarColor">@color/colorBackgroundBlack</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="colorCard">@color/colorCardBlack</item>
        <item name="android:windowBackground">@color/colorBackgroundBlack</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:disabledAlpha">0.5</item>-->
        <item name="android:textColor">@drawable/textview_selector</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Section" parent="Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorCard</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/global_corner_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/card_default_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_default_margin</item>
        <item name="android:layout_marginTop">@dimen/card_default_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_default_margin</item>
    </style>

    <style name="BaseCard.Wide" parent="BaseCard">
        <item name="android:layout_marginStart">@dimen/card_expanded_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_expanded_horizontal_margin</item>
    </style>

    <style name="Button.Circular" parent="Clickable.Borderless">
        <item name="android:layout_width">@dimen/channel_button_size</item>
        <item name="android:layout_height">@dimen/channel_button_size</item>
    </style>

    <style name="Clickable">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/custom_ripple</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Clickable.Borderless" parent="Clickable">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Icon" parent="Clickable.Borderless">
        <item name="android:tint">?attr/colorIcon</item>
        <item name="android:padding">@dimen/icon_button_padding</item>
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
    </style>

    <style name="CheckIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/icon_check_size</item>
        <item name="android:layout_height">@dimen/icon_check_size</item>
        <item name="android:src">@drawable/ic_check</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="tint">?attr/colorIcon</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Toolbar styles -->

    <style name="Toolbar">
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:textColorPrimary">?attr/colorToolbarText</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:text">@string/title_favourite</item>
        <item name="android:textColorPrimary">?attr/colorToolbarText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorDivider</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/global_corner_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
